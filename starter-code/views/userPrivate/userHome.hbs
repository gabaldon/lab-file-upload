
{{#with user}}

<div class="container">
  <div class="row">
    <h1>{{username}} Welcome to your account</h1> 
    <figure><img src="{{imgPath}}"></figure>
    <div class="col-sm-6 centered-form">
    <h3>Post</h3>
      <form action="/userHome" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label>Text</label>
          <input type="text" name="text">
        </div><br>
        <div class="form-group">
          <label>Imagen</label>
          <input type="file" name="photo">
        </div><br>
        <button type="submit">Post</button>
      </form>
    </div>
  </div>
   
</div>
<br><br><a href="/logout">Log Out</a>
{{/with}}
